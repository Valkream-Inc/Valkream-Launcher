{
  "name": "Valkream-Launcher",
  "version": "2.0.0",
  "description": "Launcher Valheim moddÃ© pour Valkream",
  "author": "Valkream Team",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "cross-env BROWSER=none cross-env PORT=8080 vite",
    "start:electron": "cross-env NODE_ENV=dev electron ./main/app.js",
    "dev": "npm run rebuild && concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "npm run start:react",
    "dev:electron": "wait-on http://localhost:8080 && nodemon --exec npm run start:electron",
    "set-icon": "node set-icon.js",
    "build": "npm run set-icon && npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "node ./build-script.js --obf=true",
    "rebuild": "electron-rebuild"
  },
  "license": "MIT",
  "nodemonConfig": {
    "ext": "js,json",
    "ignore": "**/src/renderer/**"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fabricio-191/valve-server-query": "^4.1.9",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@react-three/drei": "^10.7.5",
    "@react-three/fiber": "^9.3.0",
    "axios": "^1.10.0",
    "better-sqlite3": "^12.2.0",
    "electron-updater": "^6.1.8",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.3.0",
    "notistack": "^3.0.2",
    "path": "^0.12.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.1",
    "three": "^0.180.0",
    "valkream-function-lib": "1.0.7",
    "yaml": "^2.2.2"
  },
  "devDependencies": {
    "@types/three": "^0.180.0",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "30.5.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "javascript-obfuscator": "^4.1.0",
    "jimp": "^0.22.12",
    "node-fetch": "^2.7.0",
    "nodemon": "^3.1.2",
    "png2icons": "^2.0.1",
    "vite": "^7.1.3",
    "wait-on": "^8.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Valkream-Inc/Valkream-Launcher.git"
  }
}
